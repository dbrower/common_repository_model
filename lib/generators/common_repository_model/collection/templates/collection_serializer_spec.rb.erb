require 'spec_helper'

describe <%= class_name %>Serializer do
  subject { <%= class_name %>Serializer.new(<%= singular_table_name %>) }
  let(:<%= singular_table_name %>) { FactoryGirl.create(:<%= singular_table_name %>) }
  let(:json) { JSON.parse(subject.to_json) }
